{
    "configurations": [
        {
            "name": "Node: Current File",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "TSX Node: Current File",
            "type": "node",
            "request": "launch",
            "program": "${file}",
            "runtimeExecutable": "tsx",
            "runtimeArgs": [],
            "skipFiles": [
                "<node_internals>/**"
            ]
        },
        {
            "name": "Browser: Chrome",
            "type": "chrome",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/metaverse",
            "userDataDir": "C:/Workspace/.vscode/chrome-debug-profile",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
        },
        {
            "name": "Browser: Edge",
            "type": "msedge",
            "request": "launch",
            "url": "http://localhost:5173",
            "webRoot": "${workspaceFolder}/metaverse",
            "userDataDir": "C:/Workspace/.vscode/edge-debug-profile",
            "resolveSourceMapLocations": [
                "${workspaceFolder}/**",
                "!**/node_modules/**"
            ],
        }
    ]
}